  --sun-elevation 15 \
  --sun-intensity 0.6 \
  --sun-color 1.0 0.5 0.9 \
  --preset outdoor_sun \
  --gi ibl,ssao \
  --sky hdri \
  --volumetric "density=0.04,phase=hg,g=0.5" \
  --shadows pcf \
  --shadow-map-res 4096 \
  --cascades 4 \
  --pcss-blocker-radius 0.002 \
  --pcss-filter-radius 0.01 \

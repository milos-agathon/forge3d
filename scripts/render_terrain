python examples/terrain_demo.py --dem assets/Gore_Range_Albers_1m.tif --hdr assets/hdri/snow_field_4k.hdr --size 1920 1080 --render-scale 1 --msaa 8 --ibl-res 1024 --ibl-intensity 1.0 --cam-radius 1400 --cam-phi 135 --cam-theta 35 --exposure 1.0 --sun-azimuth 135 --sun-elevation 35 --sun-intensity 3.0 --sun-color 1.0 0.95 0.90 --gi ibl --sky hdri --albedo-mode colormap --colormap "#006147,#D1CC73,#C48439,#A03700,#9C170A,#904736,#FFFFFF" --colormap-strength 1 --colormap-interpolate --colormap-size 1024 --shadows csm --cascades 3 --shadow-map-res 4096 --lambert-contrast 1.0 --detail-strength 0.0 --normal-strength 1.0 --unsharp-strength 0.0 --colormap-srgb --output-srgb-eotf --output examples/output/terrain_csm.png --overwrite

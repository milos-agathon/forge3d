{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "AI Run (XML mode, no API)",
      "type": "shell",
      "command": "python3",
      "args": [
        "scripts/ai_orchestrator_xml.py"
      ],
      "windows": {
        "command": "py",
        "args": [
          "-3",
          "scripts\\ai_orchestrator_xml.py"
        ],
        "options": {
          "env": {
            "PATH": "${env:APPDATA}\\npm;${env:PATH}", // so claude.cmd is found
            "AI_GET_REVIEW1": "0", // skip Gemini to shorten prompt for now
            "AI_CLAUDE_TURNS": "200", // give Claude time to finish
            "PYTHONUTF8": "1"
          }
        }
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "options": {
        "env": {
          "DEFAULT_BRANCH": "main",
          "AI_GET_REVIEW1": "1",
          "AI_RUN_TESTS": "1",
          "AI_PYTEST_ARGS": "-q -m not gpu",
          "AI_PYTEST_TIMEOUT": "900",
          "PYTHONUTF8": "1"
        }
      }
    }
  ]
}